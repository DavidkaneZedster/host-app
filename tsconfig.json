{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
	 "resolveJsonModule": true,
    "strict": true
    //  "baseUrl": "./src"
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
